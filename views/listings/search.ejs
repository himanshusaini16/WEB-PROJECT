<% layout("layout/boilerplate.ejs") -%>
<% if(searchItems.length>0){ %>
<h3>SEARCH RESULT</h3>
<div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of searchItems) { %>
            <a href="/listings/<%=listing._id%>" class="listing-link">
                <div class="card col listing-card">
                    <img src="<%=listing.image.url%>" class="card-img-top" alt="Listing image"  style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <h5 class="card-title"><%=listing.title%></h5>
                      <p class="card-price"> &#8377;<%=listing.price%>/night
                      <i class="tax-info">&nbsp;&nbsp;+18% GST</i></p>
                    </div>
                  </div>
            </a>
          <% } %>
</div> 
<% } %>
<h3>NO RESULT FOUND</h3>
 